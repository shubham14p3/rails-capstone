<!DOCTYPE html>
<html>

<head>
  <title>saltylifestyle</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav>
    <div class="logo">saltylifestyle</div>
    <ul class="categories">
      <li class="lstly">Home</li>
      <li class="lstly">Longboarding</li>
      <li class="lstly">Surfing</li>
      <li class="lstly">Scuba</li>
      <li class="lstly">Kiteboarding</li>
      <li class="lstly">Freediving</li>
    </ul>
    <div class="session-btns">
      <% if user_signed_in? %>
      <li>
        <%= current_user.username %>
      </li>
      <span class="divider">|</span>
      <li>
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
      </li>
      <% else %>
      <li>
        <%= link_to('Register', new_user_registration_path) %>
      </li>
      <span class="divider">|</span>
      <li>
        <%= link_to('Login', new_user_session_path) %>
      </li>
      <% end %>
    </div>
  </nav>
  <%= yield %>
</body>

</html>